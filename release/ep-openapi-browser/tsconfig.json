{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES6",
    "lib": ["ES6", "dom"],
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
